# ============================================================
# GentlyOS Headless Setup Configuration
# ============================================================
# Edit these values BEFORE running bootstrap.sh
# ============================================================

# --- User Account ---
GENTLY_USER="gently"
GENTLY_PASSWORD="gently2026"
# Set to "yes" to be prompted interactively for the password
GENTLY_PASSWORD_PROMPT="no"

# --- SSH ---
SSH_PORT=22
# Allow password auth (set to "no" after copying SSH keys)
SSH_ALLOW_PASSWORD="yes"
# Path to your public key (optional, paste content or leave empty)
SSH_AUTHORIZED_KEY=""

# --- Networking (Ethernet static IP for direct PC-to-PC) ---
# Set NETWORK_MODE to "static" for direct ethernet, "dhcp" to skip
NETWORK_MODE="static"
STATIC_IP="192.168.1.100"
STATIC_GATEWAY="192.168.1.1"
STATIC_NETMASK="255.255.255.0"
STATIC_DNS="8.8.8.8,1.1.1.1"
# The ethernet interface name (auto-detected if left empty)
ETH_INTERFACE=""

# --- Ollama ---
OLLAMA_MODEL="qwen3:14b"
# Additional models to pull (space-separated, optional)
OLLAMA_EXTRA_MODELS=""
# Bind address for remote access (0.0.0.0 = all interfaces)
OLLAMA_HOST="0.0.0.0"
OLLAMA_PORT=11434

# --- Python / PyTorch ---
PYTHON_VERSION="3.11"
# "auto" detects CUDA/ROCm, or force: "cpu", "cu121", "cu124", "rocm6.0"
PYTORCH_COMPUTE="auto"
PYTORCH_VENV_PATH="/opt/gentlyos/venv"

# --- GentlyOS ---
# "binary" = download release, "source" = cargo build
GENTLYOS_INSTALL_MODE="source"
GENTLYOS_REPO_PATH="/opt/gentlyos/repo"

# --- API Gateway / Remote Access ---
# Port for the GentlyOS web interface
WEB_PORT=8080
# Port for the unified API proxy (Ollama + GentlyOS)
API_PORT=9090
# Enable firewall rules (ufw)
ENABLE_FIREWALL="yes"
